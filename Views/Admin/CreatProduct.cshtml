@model AlhalabiShopping.Models.Product
@{ Layout = "_Layout"; }

<div class="container mt-5" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-white border-gold shadow-lg" style="border-radius: 20px;">
                <div class="card-header border-gold text-center py-3">
                    <h3 class="text-gold mb-0">إضافة منتج جديد</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/Admin/Creatproduct" method="post">
                        <div class="mb-3">
                            <label class="form-label text-gold">اسم المنتج</label>
                            <input name="ProductName" class="form-control bg-transparent text-white border-gold" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-gold">السعر</label>
                            <input name="Price" type="number" step="0.01" class="form-control bg-transparent text-white border-gold" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-gold">القسم</label>
                            <select name="Category" class="form-select bg-transparent text-white border-gold">
                                <option value="Bags">حقائب</option>
                                <option value="Watches">ساعات</option>
                                <option value="Perfumes">عطور</option>
                                <option value="Makeup">مكياج</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-gold">رابط الصورة</label>
                            <input name="ImagePath" class="form-control bg-transparent text-white border-gold" placeholder="/images/example.jpg">
                        </div>
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-gold btn-lg fw-bold shadow">حفظ المنتج</button>
                            <a href="/Admin/Index" class="btn btn-outline-light">إلغاء</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>