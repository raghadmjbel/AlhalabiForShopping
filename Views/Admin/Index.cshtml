@model IEnumerable<AlhalabiShopping.Models.Product>

@{
    Layout = "_Layout";
    ViewData["Title"] = "إدارة المنتجات";
}

<div class="container mt-5" dir="rtl">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-gold"><i class="fas fa-boxes"></i> إدارة منتجات مول الحلبي</h2>
        <a href="/Admin/Creatproduct" class="btn btn-gold fw-bold shadow">
            <i class="fas fa-plus-circle"></i> إضافة منتج جديد
        </a>
    </div>

    <div class="table-responsive shadow-lg" style="border-radius: 15px; overflow: hidden;">
        <table class="table table-dark table-hover border-gold mb-0">
            <thead class="bg-gold text-dark">
                <tr>
                    <th>الصورة</th>
                    <th>الاسم</th>
                    <th>السعر</th>
                    <th>القسم</th>
                    <th class="text-center">الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@item.ImagePath" width="55" height="55" class="rounded border-gold shadow-sm" style="object-fit: cover;">
                        </td>
                        <td class="align-middle fw-bold">@item.ProductName</td>
                        <td class="align-middle text-gold fw-bold">@item.Price.ToString("F2") $</td>
                        <td class="align-middle">
                            <span class="badge border-gold text-gold">@item.Category</span>
                        </td>
                        <td class="text-center align-middle">
                            <a href="/Admin/EditProduct/@item.ProductID" class="btn btn-sm btn-outline-info me-1">
                                <i class="fas fa-edit"></i> تعديل
                            </a>
                            <form action="/Admin/DeleteProduct" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.ProductID" />
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('هل أنت متأكد من حذف هذا المنتج؟')">
                                    <i class="fas fa-trash"></i> حذف
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .text-gold { color: #e0b354 !important; }
    .btn-gold { background-color: #e0b354; color: black; border: none; }
    .btn-gold:hover { background-color: #c99a3c; color: white; }
    .border-gold { border: 1px solid #e0b354 !important; }
    .bg-gold { background-color: #e0b354 !important; }
    .table-dark { background-color: #1a1a1a !important; }
</style>